generator client {
  provider = "prisma-client-js"
  output   = "../generated-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum SeatType {
  LEFT_ROW
  RIGHT_ROW
  GENERAL
  VIP
}

model Booking {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  customerName String
  seatType     SeatType
  seatNumber   String
  eventDate    String
  row          Int?
  col          Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([seatNumber, eventDate])
}
